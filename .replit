args = "Tkinter App"

[[workflows.workflow]]
name = "Tkinter App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python tkinter_app.py"

[[ports]]
localPort = 5000
externalPort = 80
